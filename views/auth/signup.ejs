<h2>Sign Up Form</h2>
<form action="/user/signup" method="POST">
	
  <div class="form-group">
		<label for="name">Username</label>
		<input class="form-control form-control-sm"  type="text" name="User[name]">
  </div>

  <div class="form-group">
		<label for="email">Email</label>
		<input class="form-control form-control-sm"  type="email" name="User[email]">
  </div>

  <div class="form-group">
		<label for="password">Password</label>
		<input class="form-control form-control-sm"  type="password" name="User[password]">
	</div>
	
  <div class="form-group">
		<input  class="btn btn-primary" type="submit" valie="Sign Up"/>
	</div>

</form>

<a href="/login">Back</a>
