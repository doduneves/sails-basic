<%- partial('top') %> 

<a href="/user/create" class="col-xs-6">Create New User</a>

<form class="col-xs-6 form-inline pull-right" action="/user/index" method="GET">
	<div class="form-group">
	<label for="search">Search for Username</label>
	<input  class="form-control" type="text" name="search">
	</div>

  <div class="form-group">
	<input type="submit" class="btn btn-primary" value="search"/>
	</div>
</form>

<table class="table table-hover">
	<thead class="thead-inverse">
	<tr>
		<th>Username</th>
		<th>Email</th>
		<th>User Level</th>
		<th colspan="2">Actions</th>
	</tr>
	</thead>

	<tbody>
	<% users.forEach( function( model ){ %>
	<tr>
		<td><a href="/user/view/<%=model.id %>""> <%= model.name %> </a></td>
		<td><%= model.email %></td>
		<td><%= model.userlevel %></td>
		<td><a href="/user/delete/<%= model.id %>"">Delete</a></td>
		<td><a href="/user/update/<%= model.id %>"">Edit</a>

	</tr>

	<% }); %>
	</tbody>
</table>

<a href="/user/show_deleteds">Show Deleted Users</a>

<%- partial('bottom') %> 